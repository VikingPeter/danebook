<%= form_tag session_path, method: "post", class: "sign-in-wrapper navbar-form navbar-right" do %>

	<%= label_tag do %>
		Email or Phone
		<%= text_field_tag :email, nil, {class: "navbar-email", placeholder: "Email"} %>
	<% end %>

	<%= label_tag do %>
		Password
		<%= text_field_tag :password, nil, {class: "navbar-password", placeholder: "Password"} %>
	<% end %>

  <%= label_tag do %>
    Remember me?
    <%= check_box_tag :remember_me %>
  <% end %>

  <%= submit_tag "Log ind", class: "sign-in-btn" %>
<% end %>

